generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Default: Postgres. Set DATABASE_URL in env to a Postgres URL.
  // For Supabase, copy the connection string from your Supabase project settings and set it as DATABASE_URL.
  // Example (note the sslmode=require query param which is required for TLS):
  //   postgresql://postgres:YOUR_PASSWORD@db.<project>.supabase.co:5432/postgres?sslmode=require
  // Prisma will read the connection from env("DATABASE_URL"). Ensure the URL includes ?sslmode=require.
  // For a local SQLite dev fallback, replace provider with "sqlite" and DATABASE_URL with "file:./dev.db"
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model Embedding {
  id        Int      @id @default(autoincrement())
  // Store vector as JSON (array of floats) for portability between providers
  vector    Json
  source    String?   // e.g., URL or source id
  meta      Json?
  createdAt DateTime  @default(now())
}