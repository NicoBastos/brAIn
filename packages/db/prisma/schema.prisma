generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Default: Postgres. Set DATABASE_URL in env to a Postgres URL (postgresql://user:pass@host:port/db)
  // For a local SQLite dev fallback, replace provider with "sqlite" and DATABASE_URL with "file:./dev.db"
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model Embedding {
  id        Int      @id @default(autoincrement())
  // Store vector as JSON (array of floats) for portability between providers
  vector    Json
  source    String?   // e.g., URL or source id
  meta      Json?
  createdAt DateTime  @default(now())
}